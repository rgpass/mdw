<!DOCTYPE html>
<html>
	<head>
		<!-- The full_title method is defined in -->
		<!-- app/helpers/application_helper.rb -->
	  <title><%= full_title(yield(:title)) %></title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <%= render 'layouts/shim' %>
	  <link rel="icon" href="http://tinyurl.com/m6ky744" type="image/x-icon" />
		<link rel="shortcut icon" href="http://tinyurl.com/m6ky744" type="image/x-icon" />
	</head>
	<body>
		<%= render 'layouts/header' %>
		<!-- This displays a flash message at the top only once -->
		<!-- depending on the success/failure of signup -->
		<div class="container">
			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>
			<%= render 'layouts/footer' %>
			<!-- This will show debug info but only if in -->
			<!-- the development environment. This is -->
			<!-- formatted further in custom.css.scss -->
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
