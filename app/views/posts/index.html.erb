<% if signed_in? %>
	<img src="http://tinyurl.com/kmhen5r" class="logopic logopicsi" /><br />
<% else %>
	<div class="center hero-unit">
		<div class="row-fluid">
			<div class="span4">
				<%= link_to image_tag('http://tinyurl.com/mbkk4or', class: "logopic"), root_path %>

						<%= link_to "Sign Up!", signup_path, class: "btn btn-large btn-danger pull-left" %>

						<%= link_to "Sign In!", signin_path, class: "btn btn-large btn-danger pull-right" %>
			</div>

			<div class="span8">
				<h1 class="mdwtitle">My Dysfunctional Workplace</h1>
				<h2>
					<%= link_to "Sign up", signup_path %> or <%= link_to "sign in", signin_path %> to tell the world your horror story.
				</h2>
			</div>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="span8 offset2">
		<div>
			<%= render @posts %>
		</div>
	</div>
</div>
<div class="row-fluid">
	<div class="span12 pagination-centered">
		<%= will_paginate @posts %>
	</div>
</div>

