<h1>New post</h1>

<div class="row">
	<div class="span8">
		<%= form_for(@post) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.text_area :content, placeholder: "Tell us your story..." %>
			</div>
			<%= f.submit "Post", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

